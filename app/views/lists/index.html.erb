<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<br>

<%= link_to 'Create New List', new_list_path, class: "btn btn-success"  %>

<br>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>List Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% lists.each do |list| %>
      <tr>
        <td><h3><%= list.name %></h3></td>
        <td><%= link_to 'View List ', list_path(list), class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit List Name', edit_list_path(list), class: "btn btn-warning" %></td>
        <td><%= link_to 'Delete List', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
