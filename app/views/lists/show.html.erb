

<%= link_to 'Edit List Name', edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %>

<h1><%= @list.name %> list</h1>

<%= link_to "Download List", contacts_path(format: "csv"), class: "btn btn-success" %> 

<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last name</th>
      <th>Title</th>
      <th>Publication</th>
      <th>Email</th>
      <th>Twitter</th>
      <th>Verified</th>
      <th>Lists</th>
    </tr>
  </thead>

  <tbody>
    
    <% @list.contacts.each do |contact| %>
      <tr>
        <td><%= link_to Contact.find_by(id: contact).first_name, contact_path %></td>
        <td><%= link_to Contact.find_by(id: contact).last_name, contact_path %></td>
        <td><%= link_to Contact.find_by(id: contact).title, contact_path %></td>
        <td><%= link_to Contact.find_by(id: contact).publication, contact_path %></td>
        <td><%= link_to Contact.find_by(id: contact).email, contact_path %></td>
        <td><%= link_to Contact.find_by(id: contact).twitter, contact_path %></td>
        <td><%= link_to Contact.find_by(id: contact).verified, contact_path %></td>
        <td>
          <div class="btn-group dropdown">
                      <button type="button" style="width:100%;" class="btn btn-primary dropdown-toggle"><span class="fa fa-gear"></span> Remove From List </button> 
          </div>
        </td>
      </tr>
    
    <% end %>
  </tbody>
</table>
<br>
